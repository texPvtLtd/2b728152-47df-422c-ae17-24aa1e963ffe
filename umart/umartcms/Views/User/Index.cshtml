    </header>

    <div class="row">
     
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">

                    <h2 class="panel-title">Users</h2>

                </header>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-none">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>UserName</th>
                                    <th>Email</th>
                                    <th>Location</th>

                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Md5Encryption.Encrypt(item.UserId.ToString())</td>

                                        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Location)</td>

                                        <td class="actions-hover actions-fade">
                                            <a href='@Url.Action("Edit", "User", new { Id = Md5Encryption.Encrypt(item.UserId.ToString()) })'><i class="fa fa-pencil"></i></a>
                                            <a href=@Url.Action("Delete") class="delete-row"><i class="fa fa-trash-o"></i></a>
                                        </td>

                                        @*<td id="action-row">
                                                <a id="lnkEdit" href='@Url.Action("Edit", "Brand", new { Id = Md5Encryption.Encrypt(item.BrandID.ToString()) })' class="icons edit" data-toggle="tooltip" data-placement="left" data-original-title="Edit"><span class="glyphicon glyphicon-edit"></span> </a>
                                                <a id='lnkDelete' data='@Md5Encryption.Encrypt(item.BrandID.ToString())' class="icons" data-toggle="tooltip" data-original-title="Delete" data-placement="top"><span class="glyphicon glyphicon-remove"></span></a>

                                            </td>*@
                                    </tr>
                                }
                            <tbody>

                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
