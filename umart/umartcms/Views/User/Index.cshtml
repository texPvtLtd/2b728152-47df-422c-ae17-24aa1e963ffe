@model IEnumerable<umartcms.Models.UserViewModel>
@using Common.Cryptography;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/layoutcms.cshtml";
}


    <header class="page-header">
        <h2>Users</h2>
        <div class="col-md-2">
            <a href="@Url.Action("Create")"  class="btn btn-success btn-blue btn-block"><span class="fa fa-plus"></span>New User</a>
        </div>

        @*<div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="index.html">
