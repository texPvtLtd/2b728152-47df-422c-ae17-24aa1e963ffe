@model umartcms.Models.UserViewModel

@{
    Layout = "~/Views/Shared/layoutcms.cshtml";
}

<header class="page-header">
    <h2>User</h2>
    
</header>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">@ViewBag.Title</h2>
                </header>
                <div class="panel-body">

                    @Html.HiddenFor(model => model.EncId)
                    @Html.HiddenFor(model => model.UserId)

                    <div class="form-group">
                        @Html.Label("UserName", new { @class = "col-md-3 col-xs-12 control-label" })
                        <div class="col-md-6 col-xs-12">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Email", new { @class = "col-md-3 col-xs-12 control-label" })
                        <div class="col-md-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "col-md-3 col-xs-12 control-label" })
                        <div class="col-md-6 col-xs-12">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @value = "" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                    @*<div class="form-group">
                            @Html.Label("Confirm Password", new { @class = "col-md-3 col-xs-12 control-label" })
                            <div class="col-md-6 col-xs-12">
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @value = "" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                        </div>*@



                </div>
                <div class="panel-footer">
                    <a href="@Url.Action("Index")"><span class="fa fa-angle-left"></span> Back To List</a>
                    <input type="submit" name="Update" value="Update" class="btn btn-success btn-blue pull-right" />
                </div>

            </section>
        }
    </div>
</div>
<script src="@Url.Content("~/Scripts/bootstrap-select.js")"></script>
<script type="text/javascript">
    //Alert notification for model Error.
    @if (!ViewContext.ViewData.ModelState.IsValid)
    {
        var sb = new System.Text.StringBuilder();
        foreach (var modelState in ViewContext.ViewData.ModelState.Values)
        {
            foreach (var error in modelState.Errors)
            {
                sb.Append(error.ErrorMessage);
            }
        }
        @:sweetAlertInitialize(); swal({ title: "", text: '@sb.ToString()' });
                            }
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
